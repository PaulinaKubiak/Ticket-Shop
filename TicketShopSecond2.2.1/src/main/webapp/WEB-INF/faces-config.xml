            <to-view-id>/faces/kupBilet.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>usunKonto</from-outcome>
            <to-view-id>/faces/usunKonto.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>usunKoncert</from-outcome>
            <to-view-id>/faces/usunKoncert.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>listaBiletowKlient</from-outcome>
            <to-view-id>/faces/listaKupionychBiletowKlient.xhtml</to-view-id>
            <redirect />
        </navigation-case>
                <navigation-case>
            <from-outcome>resetHasla2</from-outcome>
            <to-view-id>/faces/resetHasla2.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>
